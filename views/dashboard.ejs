<%-include('header');-%>
<body class="dashboardBody">

<div class="container">
  <div class="row headerRow">
    <div class=" topCounterDiv col-3">
      <div class="topTotalCount">1200</div>
      <div class="topOutOf">/2000 cal</div> 
    </div>
    <div class="topCounterDiv col-3">
      <div class="topTotalCount">1000</div>
      <div class="topOutOf">/1000 sdm</div> 
    </div>
    <div class="topCounterDiv col-3">
      <div class="topTotalCount">60</div>
      <div class="topOutOf">/165 pro</div> 
    </div>
    <div class="topCounterDiv col-3">
      <div class="topTotalCount">60</div>
      <div class="topOutOf">/165 pro</div> 
    </div>
  </div>
</div>

<div class="itemListContainer">
  <%foodItemList.forEach((element)=>{%>
    <div class="container itemRowContainer">
      <div class="row itemRow">
        <div class="col-9 itemTimeNameDiv">
          <h2 class="itemTime">4:35pm</h2>
          <h2 class="itemName"><%=element.name%></h2>
        </div>
        <div class="col-3 itemValueDiv">
          <h6 class="itemValue"><%=element.calories%> cal</h6>
          <h6 class="itemValue"><%=element.sodium%> sdm</h6>
          <h6 class="itemValue"><%=element.protein%> pro</h6>
          <h6 class="itemValue"><%=element.carbs%> pro</h6>
        </div>
      </div>
    </div>
  <%});%>
</div>

<!-- BootStrap Modals -->

<!-- Quick Add -->
<div class="modal" id="quickAdd" tabindex="-1" role="dialog">
  <div class="modalQuickAdd modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Quick Add</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary cancel" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary save">Save</button>
      </div>
    </div>
  </div>
</div>
<!-- AddMeal -->
<div class="modal" id="mealAdd" tabindex="-1" role="dialog">
  <div class="modalQuickAdd modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Meal</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form action="">
        <div class="modal-body">
            <select class="dropDownMeals" name="mealSelect">
            <%foodItemList.forEach((element)=>{%>
              <option value="<%=element.id%>"><%=element.name%></option>
            <%});%>
            </select>
        </div>
        
        <div type="button" class="buttonCreateMeal" data-toggle="collapse" data-target="#collapseExamples">Create Meal +</div>
        
        <div class="collapse" id="collapseExamples">
          <div class="card card-body">
            <form action="">
              <input class="saveMealInput1" placeholder="name (required)" type="text">
              <div class="saveMealDiv">
                <input class="saveMealInput2 topFour" placeholder="cal" type="number">
                <input class="saveMealInput3 topFour" placeholder="sdm" type="number">
                <input class="saveMealInput4 topFour" placeholder="pro" type="number">
                <input class="saveMealInput5 topFour" placeholder="crb" type="number">
                <input placeholder="cal" type="number">
                <input placeholder="sdm" type="number">
                <input placeholder="pro" type="number">
                <input placeholder="crb" type="number">
                <input placeholder="cal" type="number">
                <input placeholder="sdm" type="number">
                <input placeholder="pro" type="number">
                <input placeholder="crb" type="number">
                <input placeholder="cal" type="number">
                <input placeholder="sdm" type="number">
                <input placeholder="pro" type="number">
                <input placeholder="crb" type="number">
              </div>
            </form>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary cancel" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary save">Save</button>
        </div>
      </form>

    </div>
  </div>
</div>
<!-- Settings -->
<div class="modal" id="settings" tabindex="-1" role="dialog">
  <div class="modalQuickAdd modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Settings</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary cancel" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary save">Save</button>
      </div>
    </div>
  </div>
</div>
<img class="backgroundLogo" src="./files/TedCounterLogo.svg" alt="">
<nav class="bottomButtons fixed-bottom">
  <button class="buttonSettings" data-target="#settings" data-toggle="modal">‚öô</button>
  <button class="buttonAddMeal" data-target="#mealAdd" data-toggle="modal">üçΩ</button>
